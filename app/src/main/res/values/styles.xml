<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="icon">@drawable/app_logo</item>
        <item name="actionBarWidgetTheme">@style/ActionBarWidgetTheme</item>
    </style>

    <style name="ActionBarWidgetTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorHint">#000000</item>
        <item name="android:textSize">19dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

</resources>
